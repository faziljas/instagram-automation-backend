# Database Configuration
# PostgreSQL connection string for your database
DATABASE_URL=

# Security
# Secret key for JWT token generation and other cryptographic operations
SECRET_KEY=

# Instagram API Configuration
# Your Instagram App ID from Facebook Developer Console
INSTAGRAM_APP_ID=
# Your Instagram App Secret from Facebook Developer Console
INSTAGRAM_APP_SECRET=
# OAuth redirect URI (must match the one configured in Facebook Developer Console)
# IMPORTANT: Include trailing slash - Meta Console automatically adds it to saved URIs
INSTAGRAM_REDIRECT_URI=https://instagram-automation-backend-065d.onrender.com/api/instagram/oauth/callback/

# Redis Configuration
# Redis connection URL for caching and task queue
REDIS_URL=

# Stripe Configuration
# Stripe secret key for payment processing (use test key for development)
STRIPE_SECRET_KEY=
# Stripe webhook secret for verifying webhook signatures
STRIPE_WEBHOOK_SECRET=

# Supabase Configuration
# Supabase project URL (required for ES256 token verification)
SUPABASE_URL=
# Supabase JWT secret for verifying Supabase authentication tokens (Legacy HS256)
# Found in: Supabase Dashboard > Project Settings > API > JWT Secret (Legacy tab)
SUPABASE_JWT_SECRET=

# Frontend Configuration
# Frontend URL for OAuth callbacks and redirects (used in Stripe checkout and Instagram OAuth)
# Production: https://www.logicdm.app or https://logicdm.app
# Development: http://localhost:3000
FRONTEND_URL=
