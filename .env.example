# Database Configuration
# PostgreSQL connection string for your database
DATABASE_URL=

# Security
# Secret key for JWT token generation and other cryptographic operations
SECRET_KEY=

# Instagram API Configuration
# Your Instagram App ID from Facebook Developer Console
INSTAGRAM_APP_ID=
# Your Instagram App Secret from Facebook Developer Console
INSTAGRAM_APP_SECRET=
# OAuth redirect URI (must match the one configured in Facebook Developer Console)
# IMPORTANT: Include trailing slash - Meta Console automatically adds it to saved URIs
# Example: https://your-backend.onrender.com/api/instagram/oauth/callback/
INSTAGRAM_REDIRECT_URI=

# Redis Configuration
# Redis connection URL for caching and task queue
REDIS_URL=

# Dodo Payments (Merchant of Record) - Test mode
# Get these from Dodo dashboard / developer docs. See DODO_INTEGRATION.md.
# Preferred: DODO_PAYMENTS_API_KEY (falls back to DODO_API_KEY for backwards compatibility)
DODO_PAYMENTS_API_KEY=
DODO_WEBHOOK_SECRET=
DODO_PRODUCT_OR_PLAN_ID=
DODO_BASE_URL=

# Supabase Configuration
# Supabase project URL (required for ES256 token verification)
SUPABASE_URL=
# Supabase JWT secret for verifying Supabase authentication tokens (Legacy HS256)
# Found in: Supabase Dashboard > Project Settings > API > JWT Secret (Legacy tab)
SUPABASE_JWT_SECRET=
# Service role key (for server-side actions e.g. delete user from Supabase Auth)
# Found in: Supabase Dashboard > Project Settings > API > service_role (secret)
SUPABASE_SERVICE_ROLE_KEY=

# Frontend Configuration
# Frontend URL for OAuth callbacks and redirects (used in Dodo checkout and Instagram OAuth)
# Production: https://www.logicdm.app or https://logicdm.app
# Development: http://localhost:3000
FRONTEND_URL=
